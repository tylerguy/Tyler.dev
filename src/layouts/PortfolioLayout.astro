---
const { frontmatter } = Astro.props;
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Layout from "./Layout.astro";
---

<Layout title={frontmatter.title}>
  <div class="header">
    <h1>{frontmatter.title}</h1>
    <div id="header-grid">
      <div id="description">
        <h3>{frontmatter.description}</h3>
        <slot />
      </div>
      <iframe
        width="560"
        height="315"
        src={frontmatter.trailer}
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
    </div>
    <a href={frontmatter.link}>Download Here</a>
  </div>
  <div class="content">
    <div id="date">
      <p id="heading">Release Date</p>
      <p>{frontmatter.date_created}</p>
    </div>
    <div id="roles">
      <p id="heading">Roles</p>
      <p>{frontmatter.roles}</p>
    </div>
    <div id="platform">
      <p id="heading">Platform</p>
      <p>{frontmatter.platform}</p>
    </div>
    <div id="engine">
      <p id="heading">Engine</p>
      <p>{frontmatter.engine}</p>
    </div>
    <div id="genres">
      <p id="heading">Genres</p>
      <p>{frontmatter.genre}</p>
    </div>
  </div>
  <hr />
  <div id="gallery">
    <h2>Screenshots</h2>
    <!-- parse the screenshots array -->
    <div id="screenshots">
      {
        frontmatter.screenshots.map((screenshot) => (
          <div id="screenshot">
            <img src={screenshot.url} alt={screenshot.alt} />
            <p>{screenshot.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
<hr id="end" />

<style>
  @import url("https://fonts.googleapis.com/css2?family=Shantell+Sans:ital,wght@0,300..800;1,300..800&display=swap");

  body {
    background: #13151a;
  }
  * {
    font-family: "Shantell Sans", cursive;
  }

  .header {
    text-align: center;
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    row-gap: 1rem;
  }
  h1 {
    margin: 0;
    padding-bottom: 20px;
  }
  h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    text-align: center;
  }
  h3 {
    margin: 0;
    color: white;
  }

  a {
    color: white;
  }
  .content {
    margin-top: 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-content: center;
    margin-right: 2rem;
    margin-left: 2rem;
  }
  .content div {
    padding: 1rem;
    background-color: #ffffff43;
    margin: 0.5rem;
    box-shadow: 0 0 10px 0 rgba(255, 255, 255, 0.34);
  }
  #date {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  p {
    margin: 0;
    font-size: 16px;
  }
  #heading {
    font-weight: bold;
  }

  hr {
    margin-top: 2rem;
    margin-right: 2rem;
    margin-left: 2rem;
    border: 0;
    border-top: 1px solid #ccc;
  }
  #gallery {
    margin-top: 2rem;
  }

  #screenshots {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 1rem;
    margin: 0 5rem;
  }

  #header-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin: 0 5rem;
  }
  #screenshot {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  img {
    width: 100%;
    height: auto;
  }

  #end {
    margin-bottom: 2rem;
  }

  /* make the date div twice the width of the other grid elements */
  #date {
    grid-column: span 2;
  }
</style>
